{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@backend/*": ["backend/*"],
      "@frontend/*": ["src/*"],
      "@/*": ["./*"]
    },

    "outDir": "dist"
  },

  "include": [
    "backend/**/*.ts",
    "shared/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
